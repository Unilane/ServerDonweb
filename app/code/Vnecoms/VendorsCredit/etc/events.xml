<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
	<event name="sales_order_invoice_save_before">
        <observer name="vnecoms_vendorscredit_sales_invoice_save_before" instance="Vnecoms\VendorsCredit\Observer\CalculateCommission" />
    </event>
    <event name="vendor_invoice_save_commit_after">
        <observer name="vnecoms_vendorscredit_vendor_invoice_save_commit_after" instance="Vnecoms\VendorsCredit\Observer\ProcessCommission" />
    </event>
    <event name="sales_order_creditmemo_save_commit_after">
        <observer name="vnecoms_vendorscredit_creditmemo_save_after" instance="Vnecoms\VendorsCredit\Observer\ProcessRefund" />
    </event>

    <event name="ves_vendorssales_process_order_after">
        <observer name="vnecoms_vendorscredit_vendorssales_process_order_before" instance="Vnecoms\VendorsCredit\Observer\AddCreditToVendorOrder" />
    </event>

    <event name="ves_vendorssales_process_invoice_before">
        <observer name="vnecoms_vendorscredit_process_invoice_before" instance="Vnecoms\VendorsCredit\Observer\AddCreditToVendorInvoice" />
    </event>

</config>
