		<section id="payment_all_paypal" showInDefault="0" showInWebsite="0" showInStore="0">
			<include path="Vnecoms_VendorsCredit::system/paypal_payflowpro.xml"/>
			<include path="Vnecoms_VendorsCredit::system/payflow_link.xml"/>
