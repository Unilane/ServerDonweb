<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">product_import_export_queue.product_import_export_queue_data_source</item>
            <item name="deps" xsi:type="string">product_import_export_queue.product_import_export_queue_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">queue_columns</item>
    </argument>
    <dataSource name="product_import_export_queue_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <!-- <argument name="class" xsi:type="string">Vnecoms\VendorsCredit\Ui\Component\Withdraw\DataProvider</argument> -->
            <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">product_import_export_queue_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">queue_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="filter_url_params" xsi:type="array">
                        <item name="vendor_id" xsi:type="string">*</item>
                    </item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">queue_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
    <container name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="template" xsi:type="string">ui/grid/toolbar</item>
            </item>
        </argument>
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="templates" xsi:type="array">
                        <item name="filters" xsi:type="array">
                            <item name="select" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                                <item name="template" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                            </item>
                        </item>
                    </item>
                </item>
                <item name="observers" xsi:type="array">
                    <item name="column" xsi:type="string">column</item>
                </item>
            </argument>
        </filters>
			<massaction name="listing_massaction">
	            <argument name="data" xsi:type="array">
	                <item name="config" xsi:type="array">
	                   <item name="selectProvider" xsi:type="string">product_import_export_queue.product_import_export_queue.queue_columns.ids</item>
	                    <item name="component" xsi:type="string">Magento_Ui/js/grid/tree-massactions</item>
	                    <item name="indexField" xsi:type="string">queue_id</item>
	                </item>
	            </argument>
	            <!-- 
	            <action name="import_background">
	                <argument name="data" xsi:type="array">
	                    <item name="config" xsi:type="array">
	                        <item name="type" xsi:type="string">import_background</item>
	                        <item name="label" xsi:type="string" translate="true">Import in Background</item>
	                        <item name="url" xsi:type="url" path="catalog/import/massImport"/>
	                    </item>
	                </argument>
	            </action>
	             -->
	            <action name="delete">
	                <argument name="data" xsi:type="array">
	                    <item name="config" xsi:type="array">
	                        <item name="confirm" xsi:type="array">
	                            <item name="title" xsi:type="string" translate="true">Delete</item>
	                            <item name="message" xsi:type="string" translate="true"><![CDATA[Delete selected item?]]></item>
	                        </item>
	                        <item name="type" xsi:type="string">delete</item>
	                        <item name="label" xsi:type="string" translate="true">Delete</item>
	                        <item name="url" xsi:type="url" path="catalog/import/massDelete"/>
	                    </item>
	                </argument>
	            </action>
        	</massaction>
        <paging name="listing_paging">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="selectProvider" xsi:type="string">product_import_export_queue.product_import_export_queue.queue_columns.ids</item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">product_import_export_queue.product_import_export_queue.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current.paging</item>
                    </item>
                </item>
            </argument>
        </paging>
    </container>
    <columns name="queue_columns">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="childDefaults" xsi:type="array">
                    <item name="fieldAction" xsi:type="array">
                        <item name="provider" xsi:type="string">product_import_export_queue.product_import_export_queue.queue_columns.actions</item>
                        <item name="target" xsi:type="string">applyAction</item>
                        <item name="params" xsi:type="array">
                            <item name="0" xsi:type="string">edit</item>
                            <item name="1" xsi:type="string">${ $.$data.rowIndex }</item>
                        </item>
                    </item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">product_import_export_queue.product_import_export_queue.listing_top.bookmarks</item>
                        <item name="root" xsi:type="string">columns.${ $.index }</item>
                        <item name="namespace" xsi:type="string">current.${ $.storageConfig.root}</item>
                    </item>
                </item>
            </item>
        </argument>
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">queue_id</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="sku">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Sku</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
        </column>

        <column name="behavior">
            <argument name="data" xsi:type="array">
            	<item name="options" xsi:type="object">Vnecoms\VendorsProductImportExport\Model\Source\Behavior</item>
                <item name="config" xsi:type="array">
                	<item name="fieldClass" xsi:type="string">import-behavior</item>
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Behavior</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
        </column>
        <column name="status">
            <argument name="data" xsi:type="array">
            	<item name="options" xsi:type="object">Vnecoms\VendorsProductImportExport\Model\Source\Status</item>
                <item name="config" xsi:type="array">
                	<item name="fieldClass" xsi:type="string">import-status</item>
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Vnecoms_VendorsProductImportExport/js/grid/columns/status</item>
                    <item name="bodyTmpl" xsi:type="string">Vnecoms_VendorsProductImportExport/import/grid/text</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="sortOrder" xsi:type="number">60</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
