<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="ves_vendor_product_import_queue" resource="default" engine="innodb" comment="Product Import queue">
        <column xsi:type="smallint" name="queue_id" unsigned="false" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="vendor_id" unsigned="true" nullable="false" identity="false"
                comment="Vendor ID"/>
        <column xsi:type="varchar" name="behavior" nullable="false" length="10" comment="Behavior"/>
        <column xsi:type="varchar" name="sku" nullable="false" length="255" comment="Sku"/>
        <column xsi:type="text" name="product_data" nullable="false" comment="Product Data"/>
        <column xsi:type="varchar" name="error_msg" nullable="true" length="255" comment="Error Message"/>
        <column xsi:type="smallint" name="status" nullable="false" comment="status" default="0"/>
        <constraint xsi:type="foreign" referenceId="VNECOMS_VENDOR_ID_FOREIGN"
                    table="ves_vendor_product_import_queue" column="vendor_id" referenceTable="ves_vendor_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="queue_id"/>
        </constraint>
    </table>
</schema>
