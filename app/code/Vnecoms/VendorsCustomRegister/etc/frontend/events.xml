<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="controller_action_predispatch_marketplace_seller_loginPost">
        <observer name="recaptcha_on_login" instance="Vnecoms\VendorsCustomRegister\Observer\LoginObserver"/>
    </event>

    <event name="controller_action_predispatch_marketplace_seller_registerPost">
        <observer name="recaptcha_on_create_user" instance="Vnecoms\VendorsCustomRegister\Observer\CreateVendorObserver"/>
    </event>

    <event name="controller_action_predispatch_customer_account_createpost">
        <observer name="recaptcha_on_create_user" instance="Vnecoms\VendorsCustomRegister\Observer\CreateCustomerObserver"/>
    </event>

</config>
