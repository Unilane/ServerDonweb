<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Framework\Translate\Inline\ConfigInterface" type="Vnecoms\VendorsTranslateInline\Model\Translate\Inline\Config" />

    <type name="Magento\Framework\Translate\Inline">
        <arguments>
            <argument name="templateFileName" xsi:type="string">Vnecoms_VendorsTranslateInline::translate_inline.phtml</argument>
            <argument name="translatorRoute" xsi:type="string">translateinline/ajax/translate</argument>
            <argument name="layout" xsi:type="object">Magento\Framework\View\LayoutInterface\Proxy</argument>
            <argument name="url" xsi:type="object">Vnecoms\Vendors\Model\UrlInterface</argument>
        </arguments>
    </type>

    <type name="Magento\Framework\Translate\Inline">
        <plugin name="vendors-translate-inline" type="Vnecoms\VendorsTranslateInline\Plugin\Translate\Inline" sortOrder="15"/>
    </type>

</config>
