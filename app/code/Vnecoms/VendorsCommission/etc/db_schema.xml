<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="ves_vendor_commission_rule" resource="default" engine="innodb" comment="Commission Table">
        <column xsi:type="int" name="rule_id" unsigned="true" nullable="false" identity="true"
                comment="ID"/>

        <column xsi:type="varchar" name="website_ids" nullable="false" length="128" comment="Website Ids"/>
        <column xsi:type="varchar" name="vendor_group_ids" nullable="false" length="128" comment="Vendor Group Ids"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Rule Name"/>
        <column xsi:type="text" name="description" nullable="false" comment="Rule Name"/>

        <column xsi:type="date" name="from_date" comment="From" nullable="true"/>
        <column xsi:type="date" name="to_date" comment="To" nullable="true"/>

        <column xsi:type="smallint" name="is_active" unsigned="false" nullable="true" identity="false"
                default="0" comment="Is Active"/>

        <column xsi:type="text" name="condition_serialized" nullable="false" comment="Condition Serialized"/>

        <column xsi:type="smallint" name="stop_rules_processing" unsigned="false" nullable="true"
                identity="false" default="1" comment="Stop Rules Processing"/>

        <column xsi:type="int" name="priority" unsigned="false" nullable="true" identity="false"
                comment="Priority"/>

        <column xsi:type="varchar" name="commission_by" nullable="true" length="128" comment="Commission By"/>
        <column xsi:type="varchar" name="commission_action" nullable="true" length="128" comment="Commission Action"/>

        <column xsi:type="decimal" name="commission_amount" scale="4" precision="12" unsigned="false" nullable="true"
                default="0" comment="Commission Amount"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="rule_id"/>
        </constraint>
    </table>

</schema>