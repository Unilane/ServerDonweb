<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <madkting_synchronization>
            <orders>
                <sync_orders>1</sync_orders>
                <shipping_address_lacking>1</shipping_address_lacking>
                <create_fulfillment_orders>0</create_fulfillment_orders>
            </orders>
            <products>
                <permanent_sync>1</permanent_sync>
                <no_managed_stock>1000</no_managed_stock>
                <max_time_get_products>30</max_time_get_products>
            </products>
            <tasks_queue>
                <success_lifetime>30</success_lifetime>
                <failure_lifetime>60</failure_lifetime>
            </tasks_queue>
        </madkting_synchronization>
        <payment>
            <madkting>
                <active>1</active>
                <model>MadktingPaymentFacade</model>
                <title>Madkting</title>
                <payment_action>authorize</payment_action>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_refund>1</can_refund>
                <can_void>1</can_void>
                <can_cancel>1</can_cancel>
                <can_use_checkout>0</can_use_checkout>
                <can_use_internal>0</can_use_internal>
                <is_gateway>1</is_gateway>
            </madkting>
        </payment>
        <carriers>
            <madkting>
                <active>1</active>
                <model>Madkting\Connect\Model\Carrier\Madkting</model>
                <name>Madkting</name>
                <price>0</price>
                <title>Shipping</title>
            </madkting>
        </carriers>
    </default>
</config>
