<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_model_service_quote_submit_before">
        <observer name="madkting_quote_to_order" instance="Madkting\Connect\Observer\QuoteToOrder" />
    </event>
    <event name="catalog_product_save_commit_after">
        <observer name="madkting_product_save_queue" instance="Madkting\Connect\Observer\QueueProductSave" />
    </event>
    <event name="catalog_product_import_finish_before">
        <observer name="madkting_product_import" instance="Madkting\Connect\Observer\ImportProduct" />
    </event>
    <event name="catalog_product_delete_after_done">
        <observer name="madkting_product_delete_queue" instance="Madkting\Connect\Observer\ProductDelete" />
    </event>
    <event name="cataloginventory_stock_item_save_after">
        <observer name="madkting_stock_change" instance="Madkting\Connect\Observer\MadktingStockChange" />
    </event>
    <event name="checkout_submit_all_after">
        <observer name="madkting_stock_place_order" instance="Madkting\Connect\Observer\MadktingStockPlaceOrder" />
    </event>
    <event name="sales_order_item_cancel">
        <observer name="madkting_stock_cancel_order" instance="Madkting\Connect\Observer\MadktingStockCancelOrder"/>
    </event>
</config>
