<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <columns name="sales_order_columns">
        <column name="madkting_pk">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Marketplace Order ID</item>
                </item>
            </argument>
        </column>
        <column name="madkting_marketplace_reference">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Marketplace Order Reference</item>
                </item>
            </argument>
        </column>
        <column name="madkting_marketplace_pk">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Madkting\Connect\Ui\Component\Listing\Columns\Order\MarketplaceOptions</item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Sales Channel</item>
                </item>
            </argument>
        </column>
        <column name="madkting_mercashop">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Marketplace Tag</item>
                </item>
            </argument>
        </column>
        <column name="madkting_status">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Madkting\Connect\Model\Config\Source\StatusMadkting</item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Marketplace Status</item>
                </item>
            </argument>
        </column>
        <column name="madkting_shop_pk">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Madkting\Connect\Ui\Component\Listing\Columns\Product\MadktingShopOptions</item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Yuju Shop</item>
                </item>
            </argument>
        </column>
        <column name="madkting_fulfillment">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Madkting\Connect\Model\Config\Source\FulfillmentType</item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Fulfillment Type</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
