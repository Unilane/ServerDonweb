<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="madkting_create">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">madkting_create</item>
                        <item name="label" xsi:type="string" translate="true">Create in Yuju</item>
                        <item name="url" xsi:type="url" path="madkting/product/createForm" />
                    </item>
                </argument>
            </action>
            <action name="madkting_update">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">madkting_update</item>
                        <item name="label" xsi:type="string" translate="true">Update in Yuju</item>
                        <item name="url" xsi:type="url" path="madkting/product/massUpdate"/>
                    </item>
                </argument>
            </action>
            <action name="madkting_delete">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Delete products on Yuju</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure to delete selected products?</item>
                        </item>
                        <item name="type" xsi:type="string">madkting_delete</item>
                        <item name="label" xsi:type="string" translate="true">Delete in Yuju</item>
                        <item name="url" xsi:type="url" path="madkting/product/massDelete"/>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="product_columns" class="Magento\Catalog\Ui\Component\Listing\Columns">
        <column name="madkting_status">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Madkting\Connect\Ui\Component\Listing\Columns\Product\MadktingStatusOptions</item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="add_field" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Yuju Status</item>
                </item>
            </argument>
        </column>
        <column name="madkting_status_message">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="add_field" xsi:type="boolean">true</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Yuju Status Message</item>
                </item>
            </argument>
        </column>
        <column name="madkting_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="add_field" xsi:type="boolean">true</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Yuju ID</item>
                </item>
            </argument>
        </column>
        <column name="madkting_type">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Madkting\Connect\Ui\Component\Listing\Columns\Product\MadktingTypeOptions</item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="add_field" xsi:type="boolean">true</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Yuju Type</item>
                </item>
            </argument>
        </column>
        <column name="madkting_shop">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Madkting\Connect\Ui\Component\Listing\Columns\Product\MadktingShopOptions</item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="add_field" xsi:type="boolean">true</item>
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Yuju Shop</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
