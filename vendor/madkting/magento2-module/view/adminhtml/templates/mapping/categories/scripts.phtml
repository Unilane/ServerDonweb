<script>
require([
    'jquery',
    'Magento_Ui/js/modal/alert'
], function ($, alert) {
    $(function(){

        var actionSelectButton = $('.action-select');
        var actionDeleteButton = $('div.data-grid-cell-content>ul.action-menu>li>a.action-delete');
        
        actionSelectButton.on('click', function (event) {

            event.stopPropagation();

            var divContainer = $(this).parent('div.action-select-wrap');
            var actionMenu = divContainer.siblings('ul.action-menu');
            var brothers = divContainer.parents('tr.data-row').siblings();

            if(divContainer.hasClass('_active')){
                divContainer.removeClass('_active');
                actionMenu.removeClass('_active');
            } else {
                divContainer.addClass('_active');
                actionMenu.addClass('_active');
                brothers.find('div.action-select-wrap, ul.action-menu').each(function () {
                    $(this).removeClass('_active');
                });
            }
        });

        $('body').on('click', function () {
            var divContainer = actionSelectButton.parent('div.action-select-wrap');
            if(divContainer.hasClass('_active')){
                divContainer.siblings('ul.action-menu').removeClass('_active');
                divContainer.removeClass('_active');
            }

        });

        actionDeleteButton.on('click', function (event) {
            event.preventDefault();
            event.stopPropagation();

            var categoryId = $(this).data('category-id');
            var categoryName = $(this).data('category-name');

            alert({
                "title" : "<?php echo __('Delete') ?>" + " " + categoryName,
                "content" : "<?php echo __('Are you sure you wan\'t to delete the match for') ?>" + " " + categoryName + "?",
                "buttons" : [
                    {
                        "text" : "<?php echo __('No') ?>",
                        "class" : "action-secondary action-dismiss",
                        "click" : function () {
                            this.closeModal();
                        }
                    },
                    {
                        "text" : "<?php echo __('Yes') ?>",
                        "class" : "action-primary action-accept",
                        "click" : function () {
                            var deleteUrl = "<?php echo $block->getUrl('madkting/categoriesmapping/delete') ?>" + "id/" + categoryId;
                            location.href = deleteUrl;
                        }
                    }
                ]
            });
        });
        
    });
});
</script>
