<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!--  Product Feed  -->
    <virtualType name="Magento\SaaSInventory\Model\StockStatusFeedRegistry" type="Magento\SaaSCommon\Model\FeedRegistry">
        <arguments>
            <argument name="excludeFields" xsi:type="array">
                <item name="modifiedAt" xsi:type="string">modifiedAt</item>
                <item name="updatedAt" xsi:type="string">updatedAt</item>
            </argument>
            <argument name="uniqueFields" xsi:type="array">
                <item name="sku" xsi:type="string">sku</item>
                <item name="stockId" xsi:type="string">stockId</item>
            </argument>
            <argument name="registryTable" xsi:type="string">inventory_stock_status_data_submitted_hash</argument>
        </arguments>
    </virtualType>
    <virtualType name="Magento\SaaSInventory\Cron\StockStatusSubmitFeed" type="Magento\SaaSCommon\Cron\SubmitFeed">
        <arguments>
            <argument name="feedName" xsi:type="string">inventoryStockStatus</argument>
            <argument name="feedSyncFlag" xsi:type="string">stock-status-feed-version</argument>
            <argument name="feedRegistry" xsi:type="object">Magento\SaaSInventory\Model\StockStatusFeedRegistry</argument>
        </arguments>
    </virtualType>
    <virtualType name="Magento\SaaSInventory\Model\StockStatusResyncManager" type="Magento\SaaSCommon\Model\ResyncManager">
        <arguments>
            <argument name="feedIndexer" xsi:type="object">Magento\InventoryDataExporter\Model\Indexer\StockStatusFeedIndexer</argument>
            <argument name="submitFeed" xsi:type="object">Magento\SaaSInventory\Cron\StockStatusSubmitFeed</argument>
            <argument name="feedInterface" xsi:type="object">Magento\InventoryDataExporter\Model\StockStatusFeed</argument>
            <argument name="flagName" xsi:type="string">inventory-stock-status-feed-version</argument>
            <argument name="indexerName" xsi:type="string">inventory_data_exporter_stock_status</argument>
            <argument name="registryTableName" xsi:type="string">inventory_stock_status_data_submitted_hash</argument>
        </arguments>
    </virtualType>

    <!--  Resync registration  -->
    <type name="Magento\SaaSCommon\Model\ResyncManagerPool">
        <arguments>
            <argument name="classMap" xsi:type="array">
                <item name="inventory-stock-status" xsi:type="string">Magento\SaaSInventory\Model\StockStatusResyncManager</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\SaaSCommon\Console\Command\Resync">
        <arguments>
            <argument name="feedNames" xsi:type="array">
                <item name="inventory-stock-status" xsi:type="string">Inventory Stock Status</item>
            </argument>
        </arguments>
    </type>
</config>
