<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/externalOrders" method="POST">
        <service class="Magento\OrderIngestion\Api\ExternalOrderRepositoryInterface" method="save" />
        <resources>
            <resource ref="Magento_Sales::create" />
        </resources>
    </route>

    <route url="/V1/externalOrders/list" method="GET">
        <service class="Magento\OrderIngestion\Api\ExternalOrderRepositoryInterface" method="getList" />
        <resources>
            <resource ref="Magento_Sales::actions_view" />
        </resources>
    </route>

    <route url="/V1/externalOrders/:orderId" method="GET">
        <service class="Magento\OrderIngestion\Api\ExternalOrderRepositoryInterface" method="get" />
        <resources>
            <resource ref="Magento_Sales::actions_view" />
        </resources>
    </route>

    <route url="/V1/externalOrders/:orderId" method="DELETE">
        <service class="Magento\OrderIngestion\Api\ExternalOrderRepositoryInterface" method="removeByOrderId" />
        <resources>
            <resource ref="Magento_Sales::actions" />
        </resources>
    </route>
</routes>
